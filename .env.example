# LLM Configuration
# For OpenAI:
# VITE_LLM_API_ENDPOINT="https://api.openai.com/v1/completions"
# VITE_LLM_API_KEY="your_api_key_here"
# VITE_LLM_MODEL_NAME="gpt-3.5-turbo-instruct"

# For Ollama (local LLM - recommended for development):
VITE_LLM_API_ENDPOINT="http://localhost:11434"
VITE_LLM_API_KEY="ollama"  # OLLAMA DOES NOT REQUIRE A KEY
VITE_LLM_MODEL_NAME="gpt-oss:20b"

VITE_LLM_MAX_TOKENS=2000
VITE_LLM_TEMPERATURE=0.7
VITE_LLM_SYSTEM_PROMPT="You are the RocketCards engine. Resolve effects deterministically based on the game state and card effects. Return responses in strict JSON format. For effect resolution, return: {\"playerDelta\": {\"hp\": 0, \"mp\": 3, \"fatigue\": 0}, \"opponentDelta\": {\"hp\": -2, \"mp\": 0, \"fatigue\": 1}, \"logEntries\": [\"Player gains 3 MP\", \"Opponent takes 2 damage\"]}. For opponent strategy, return: {\"plays\": [{\"cardId\": \"card_id\", \"reason\": \"strategic reason\"}], \"endTurn\": true}."

# LLM Turn Resolver (set to true to enable LLM-based opponent AI and effect resolution)
VITE_ENABLE_LLM_TURN_RESOLVER=false

# Game Settings
VITE_GAME_DECK_SIZE=30
VITE_GAME_STARTING_HAND=5
VITE_GAME_HAND_LIMIT=7
VITE_GAME_CHAMPION_SLOTS=3
VITE_GAME_TURN_TIMEOUT_MS=60000
VITE_GAME_MP_REGEN_DEFENSIVE=2
VITE_GAME_MP_REGEN_BALANCED=3
VITE_GAME_MP_REGEN_AGGRESSIVE=4
VITE_GAME_BASE_HP=24
VITE_GAME_BASE_MP=6
VITE_GAME_HP_STR_KEY=8
VITE_GAME_HP_NONKEY=2
VITE_GAME_MP_INT_KEY=6
VITE_GAME_MP_NONKEY=2
VITE_GAME_HP_DEFENSIVE=4
VITE_GAME_HP_BALANCED=2
VITE_GAME_HP_AGGRESSIVE=0
VITE_GAME_MP_DEFENSIVE=0
VITE_GAME_MP_BALANCED=2
VITE_GAME_MP_AGGRESSIVE=4
VITE_IMAGE_WIDTH=128
VITE_IMAGE_HEIGHT=128
VITE_ENABLE_TIMED_MATCHES=true
VITE_ENABLE_AI=true
VITE_ENABLE_PVP_LATER=false
